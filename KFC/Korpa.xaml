<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KFC.Korpa">
    <ContentPage.Content>
        <StackLayout>
        <Label Text="Vaša korpa!" FontSize="30"></Label>

        <Label x:Name="lblNaziv" Text="" FontSize="Small" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,100,0,0"></Label>

            <Label x:Name="lblHead" Text="" Grid.Row="2" Grid.Column="1"  Margin="30,0,0,0" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"></Label>
            <Label x:Name="lblOrd" Text="" Grid.Row="2" Grid.Column="1"  Margin="30,0,0,0" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"></Label>
            <Label x:Name="lblCijena" Text="" Grid.Row="4" Grid.Column="1"  Margin="30,0,0,0" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"></Label>
            <Button Text="Nastavi"  Clicked="Button_Clicked" VerticalOptions="End"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>